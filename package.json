{
  "name": "twdi",
  "homepage": "/twdi",
  "productName": "台灣藥品",
  "pwaVersion": "3.9.0",
  "version": "1.3.0",
  "license": "MIT",
  "keywords": [
    "藥品",
    "Drug"
  ],
  "description": "台灣藥品查詢 app 可查詢藥品全名、英文名、用法用量、主成分。App 支援離線瀏覽、字型調整。",
  "repository": "https://github.com/MrMYHuang/twdi",
  "author": {
    "name": "Meng-Yuan Huang",
    "email": "myh@live.com"
  },
  "private": false,
  "files": [
    "README.md"
  ],
  "main": "buildElectron/main.js",
  "scripts": {
    "start": "vite",
    "build": "npm i && vite build && node ./tools/build.js",
    "test": "vitest",
    "build-electron": "tsc -b tsconfigElectron.json",
    "build-electron-store": "tsc -b tsconfigElectron.json && mv buildElectron/mainStore.js buildElectron/main.js",
    "start-electron": "npm run build-electron && electron .",
    "dist-snap": "mkdir -p dist && snapcraft snap --use-lxd -o dist",
    "publish-snap": "snapcraft upload --release=stable dist/*.snap",
    "icons-mas": "cd buildElectron && iconutil -c icns icon.iconset",
    "dist-mas": "npm run build-electron-store && electron-builder -m mas --universal -c electronBuilderConfigs/mas.json",
    "dist-mas-dev": "npm run build-electron-store && electron-builder -m mas-dev --arm64 -c electronBuilderConfigs/masDev.json",
    "preview": "vite preview"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3",
    "semver": "^7.3.5",
    "qs": "^6.12.3",
    "fflate": "^0.8.2"
  },
  "devDependencies": {
    "@ionic/react": "^6.7.5",
    "@ionic/react-router": "^6.7.5",
    "@reduxjs/toolkit": "^1.8.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.1.0",
    "@types/adm-zip": "^0.4.34",
    "@types/node": "^20.11.0",
    "@types/qrcode": "^1.4.2",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-redux": "^7.1.23",
    "@types/react-router": "^5.1.18",
    "@types/react-router-dom": "^5.3.3",
    "@types/semver": "^7.3.7",
    "@types/uuid": "^8.3.4",
    "axios": "^0.21.1",
    "electron": "^31.4.0",
    "electron-builder": "^23.0.4",
    "history": "^4.10.1",
    "ionicons": "^6",
    "memfs": "^3.4.4",
    "qrcode": "^1.5.0",
    "query-string": "^7.1.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-redux": "^8.0.1",
    "react-router": "^5.2.1",
    "react-router-dom": "^5.3.0",
    "react-test-renderer": "^18.1.0",
    "typescript": "^4.6.3",
    "uuid": "^8.3.2",
    "workbox-background-sync": "^5.1.4",
    "workbox-broadcast-update": "^5.1.4",
    "workbox-cacheable-response": "^5.1.4",
    "workbox-core": "^5.1.4",
    "workbox-expiration": "^5.1.4",
    "workbox-google-analytics": "^5.1.4",
    "workbox-navigation-preload": "^5.1.4",
    "workbox-precaching": "^5.1.4",
    "workbox-range-requests": "^5.1.4",
    "workbox-routing": "^5.1.4",
    "workbox-strategies": "^5.1.4",
    "workbox-streams": "^5.1.4",
    "vite": "^5.4.0",
    "@vitejs/plugin-react": "^4.3.0",
    "vite-plugin-pwa": "^0.20.0",
    "vite-plugin-node-polyfills": "^0.21.0",
    "vitest": "^1.6.0",
    "jsdom": "^24.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
